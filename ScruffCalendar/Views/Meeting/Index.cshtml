    ViewData["Title"] = "Search";
}

  <form asp-controller="Meeting" asp-action="Detail" method="post">
    <input type="hidden" name="meetingId" value="@ViewData["pmi"]" />
    <button type="submit" class="btn btn-primary">View Personal Meeting Room</button>
  </form>

  <br />
